{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "outDir": "./",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "esnext"
  },
  "include": [
    "./"
  ],
  "exclude": [
    "./node_modules/**/*"
  ]
}